<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:padding="11dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/layoutback"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bootstrap_and_jquery_heading"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_bootstrap_and_jquery"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/font4"
                android:textSize="20dp"
                android:justificationMode="inter_word"
                android:textStyle="normal"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose the topics from below"
                android:textSize="20dp"
                android:fontFamily="@font/font6"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Bootstrap overview"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="CSS overview"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Environment setup"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Grid system"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Typography"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Jquery overview"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Basics of Jquery"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Selectors"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Events and Functions"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="DOM"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/BootstrapAndJqueryCustomButton11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbag"
                android:layout_centerInParent="true"
                android:text="Element visibility"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>