<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="top"
    tools:context=".ProfileActivity">


<LinearLayout
    android:id="@+id/topprofilebar"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mjprofilebag"
    android:layout_height="235dp">



</LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/greenbarinfo"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/profilebar"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mjgreencircle"/>
        <View
            android:layout_width="90dp"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Profile"
            android:textColor="#5649DF"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="90dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mjgreencircle"/>


    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="27dp"/>
    <LinearLayout
        android:id="@+id/pfinfo"
        android:layout_width="match_parent"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:textColor="#A9A9A9"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/pfnametxt"
            android:layout_width="wrap_content"
            android:text="Suhash S Indirgi"
            android:textColor="#5649DF"
            android:textStyle="bold"
            android:textSize="27dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="EmailI"
            android:textColor="#A9A9A9"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="13dp"/>

        <TextView
            android:id="@+id/pfemailtxt"
            android:layout_width="wrap_content"
            android:text="Suhash S Indirgi"
            android:textColor="#5649DF"
            android:textStyle="bold"
            android:textSize="27dp"
            android:layout_height="wrap_content"/>

        
        
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="37dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/greenbaraction"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/profilebar"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mjgreencircle"/>
        <View
            android:layout_width="90dp"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Action "
            android:textColor="#5649DF"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="90dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mjgreencircle"/>


    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="27dp"/>


    <LinearLayout
        android:id="@+id/pfaction"
        android:layout_width="match_parent"
        android:gravity="top"
        android:padding="23dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:id="@+id/homepage"
           android:background="@drawable/botombylayout">

           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Home Page"
               android:textColor="@color/white"
               android:textSize="27dp"
               android:textStyle="bold" />


       </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="27dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/changepassword"
            android:background="@drawable/botombylayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="27dp"/>


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="27dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logoutbtn"
            android:gravity="center"
            android:background="@drawable/botombylayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="27dp"/>


        </LinearLayout>








    </LinearLayout>





</LinearLayout>