<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:padding="11dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/layoutback"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/python_programming_heading"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_python_programming"
                android:fontFamily="@font/font4"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:justificationMode="inter_word"
                android:textStyle="normal"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose the topics from below"
                android:textSize="20dp"
                android:fontFamily="@font/font6"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="INTRODUCTION TO PYTHON"
                android:id="@+id/py_b1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="DATATYPES"
                android:id="@+id/py_b2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="CONDITIONAL STATEMENTS"
                android:id="@+id/py_b3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="LISTS AND TUPLES"
                android:id="@+id/py_b4"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="DICTIONARIES AND SETS"
                android:id="@+id/py_b5"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="FUNCTION"
                android:id="@+id/py_b6"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="CLASS"
                android:id="@+id/py_b7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="MODULES"
                android:id="@+id/py_b8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbag"
                android:text="DEBUGGING"
                android:id="@+id/py_b9"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>